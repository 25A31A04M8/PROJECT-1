#include <stdio.h>
#include <string.h>

struct Attendance {
    int roll;
    char name[30];
    char date[15];
    char day[10];
    char status[10];
};

int main() {
    struct Attendance s[50];
    int n, i, choice;

    printf("Enter number of students: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("\nEnter details for student %d\n", i + 1);

        printf("Roll Number: ");
        scanf("%d", &s[i].roll);

        printf("Name: ");
        scanf("%s", s[i].name);

        printf("Date (DD/MM/YYYY): ");
        scanf("%s", s[i].date);

        printf("Day: ");
        scanf("%s", s[i].day);

        printf("Status (Present/Absent): ");
        scanf("%s", s[i].status);
    }

    printf("\n--- Attendance Record ---\n");
    printf("Roll\tName\tDate\t\tDay\tStatus\n");

    for(i = 0; i < n; i++) {
        printf("%d\t%s\t%s\t%s\t%s\n",
               s[i].roll,
               s[i].name,
               s[i].date,
               s[i].day,
               s[i].status);
    }

    return 0;
}
